---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Target, Award, Clock } from "lucide-react";

const currentLocale = Astro.currentLocale || 'en';
const isGerman = currentLocale === 'de';

const translations = {
  en: {
    title: "About",
    subtitle: "We are passionate about creating innovative software solutions that empower businesses to thrive in the digital age.",
    storyTitle: "Our",
    storyTitleHighlight: "Story",
    storyPara1: "Founded with a vision to bridge the gap between innovative technology and business success, Nexor Software has been at the forefront of digital transformation for 2 years. We believe that every business deserves access to cutting-edge software solutions that drive growth and efficiency.",
    storyPara2: "Our team of experienced software developers, designers, and video editors work collaboratively to deliver solutions that not only meet current needs but also scale for future growth.",
    missionTitle: "Our Mission",
    missionText: "To empower businesses with innovative software solutions that drive digital transformation and create lasting value for our clients and their customers.",
    visionTitle: "Our Vision",
    visionText: "To be the leading software development partner for businesses seeking to leverage technology for competitive advantage and sustainable growth.",
    achievementsTitle: "Our",
    achievementsTitleHighlight: "Achievements",
    projectsLabel: "Successfully Launched Projects",
    experienceLabel: "Years Experience",
    supportLabel: "Excellent Support"
  },
  de: {
    title: "Über",
    subtitle: "Wir sind leidenschaftlich dabei, innovative Softwarelösungen zu entwickeln, die Unternehmen dabei helfen, im digitalen Zeitalter zu gedeihen.",
    storyTitle: "Unsere",
    storyTitleHighlight: "Geschichte",
    storyPara1: "Gegründet mit der Vision, die Lücke zwischen innovativer Technologie und Geschäftserfolg zu schließen, steht Nexor Software seit 2 Jahren an der Spitze der digitalen Transformation. Wir glauben, dass jedes Unternehmen Zugang zu modernsten Softwarelösungen verdient, die Wachstum und Effizienz fördern.",
    storyPara2: "Unser Team erfahrener Softwareentwickler, Designer und Videoeditoren arbeitet zusammen, um Lösungen zu liefern, die nicht nur aktuelle Bedürfnisse erfüllen, sondern auch für zukünftiges Wachstum skalieren.",
    missionTitle: "Unsere Mission",
    missionText: "Unternehmen mit innovativen Softwarelösungen zu stärken, die digitale Transformation vorantreiben und bleibenden Wert für unsere Kunden und deren Kunden schaffen.",
    visionTitle: "Unsere Vision",
    visionText: "Der führende Softwareentwicklungspartner für Unternehmen zu sein, die Technologie für Wettbewerbsvorteile und nachhaltiges Wachstum nutzen möchten.",
    achievementsTitle: "Unsere",
    achievementsTitleHighlight: "Erfolge",
    projectsLabel: "Erfolgreich gestartete Projekte",
    experienceLabel: "Jahre Erfahrung",
    supportLabel: "Ausgezeichneter Support"
  }
};

const t = translations[currentLocale];
---

<Layout>
  {/* Hero Section */}
  <section class="pt-24 pb-16 px-8 bg-gradient-to-br from-[#0C1C2C] via-[#0F2235] to-[#0C1C2C]">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-oswald font-normal text-white leading-tight mb-6">
        {t.title} <span class="text-[#30D6C4]">Nexor Software</span>
      </h1>
      <p class="text-xl md:text-2xl font-inter text-[#B0C4D4] max-w-3xl mx-auto leading-relaxed">
        {t.subtitle}
      </p>
    </div>
  </section>

  {/* Our Story */}
  <section class="py-20 px-8">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-oswald font-normal text-white mb-6">
            {t.storyTitle} <span class="text-[#30D6C4]">{t.storyTitleHighlight}</span>
          </h2>
          <p class="text-lg text-[#B0C4D4] mb-6 font-inter leading-relaxed">
            {t.storyPara1}
          </p>
          <p class="text-lg text-[#B0C4D4] font-inter leading-relaxed">
            {t.storyPara2}
          </p>
        </div>
        <div class="bg-[#0F2235] rounded-lg p-8 border border-[#30D6C4]/20">
          <h3 class="text-2xl font-oswald font-normal text-white mb-6">{t.missionTitle}</h3>
          <p class="text-[#B0C4D4] font-inter leading-relaxed mb-4">
            {t.missionText}
          </p>
          <h3 class="text-2xl font-oswald font-normal text-white mb-6 mt-8">{t.visionTitle}</h3>
          <p class="text-[#B0C4D4] font-inter leading-relaxed">
            {t.visionText}
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* Stats Section */}
  <section class="py-20 px-8 bg-[#0F2235]">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-oswald font-normal text-white text-center mb-12">
        {t.achievementsTitle} <span class="text-[#30D6C4]">{t.achievementsTitleHighlight}</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <Card class="bg-[#0C1C2C] border-[#30D6C4]/20 text-center">
          <CardHeader>
            <div class="flex justify-center mb-4">
              <Target class="h-8 w-8 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-3xl font-oswald font-normal text-[#30D6C4]">
              10+
            </CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-white font-inter">{t.projectsLabel}</p>
          </CardContent>
        </Card>
        <Card class="bg-[#0C1C2C] border-[#30D6C4]/20 text-center">
          <CardHeader>
            <div class="flex justify-center mb-4">
              <Award class="h-8 w-8 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-3xl font-oswald font-normal text-[#30D6C4]">
              2+
            </CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-white font-inter">{t.experienceLabel}</p>
          </CardContent>
        </Card>
        <Card class="bg-[#0C1C2C] border-[#30D6C4]/20 text-center">
          <CardHeader>
            <div class="flex justify-center mb-4">
              <Clock class="h-8 w-8 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-3xl font-oswald font-normal text-[#30D6C4]">
              ★★★★★
            </CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-white font-inter">{t.supportLabel}</p>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>
</Layout>
