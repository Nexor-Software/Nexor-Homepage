---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Calendar, User, ArrowRight } from "lucide-react";
import { getCollection } from 'astro:content';
import HeroTitle from "@/components/HeroTitle";

const posts = await getCollection('blog');

// Filter posts based on current locale
const filteredPosts = posts.filter((post) => {
  return post.id.includes('/en/') || post.id.includes('en/');
});

const currentLocale = Astro.currentLocale || 'en';

// Helper function to parse date strings
function parseDate(dateString) {
  return new Date(dateString);
}

// Helper function to get localized path
function getLocalizedPath(path) {
  const pathWithoutLocale = path.replace(/^\/(en|de)/, '');
  return currentLocale === 'en' ? `/en${pathWithoutLocale || '/'}` : `/de${pathWithoutLocale || '/'}`;
}

const translations = {
  en: {
    title: "Our",
    titleHighlight: "Blog",
    subtitle: "Insights into our work, technology trends, and helpful tips from the world of software development.",
    readMore: "Read more",
    dateLocale: 'en-US'
  },
  de: {
    title: "Unser",
    titleHighlight: "Blog",
    subtitle: "Einblicke in unsere Arbeit, Technologie-Trends und hilfreiche Tipps aus der Welt der Softwareentwicklung.",
    readMore: "Weiterlesen",
    dateLocale: 'de-DE'
  }
};

const t = translations[currentLocale];
---

<Layout>
  {/* Hero Section */}
  <section class="relative pt-32 pb-20 px-8 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#0C1C2C] via-[#0F2235] to-[#0C1C2C]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(48,214,196,0.1),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(48,214,196,0.05),transparent_50%)]"></div>
    {/* Smooth transition gradient overlay - much more gradual */}
    <div class="absolute bottom-0 left-0 right-0 h-96 bg-gradient-to-b from-transparent to-[#0F2235] pointer-events-none"></div>
    <div class="relative max-w-6xl mx-auto flex flex-col items-center">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-[#30D6C4]/10 border border-[#30D6C4]/20 text-[#30D6C4] text-sm font-medium mb-8">
        <span class="w-2 h-2 bg-[#30D6C4] rounded-full mr-2 animate-pulse"></span>
        Latest Insights
      </div>
      <HeroTitle client:load text={["Our Blog"]} textColors={["#30D6C4"]} />
      <p class="text-xl md:text-2xl font-inter text-[#B0C4D4] max-w-4xl mx-auto leading-relaxed mb-12">
        {t.subtitle}
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-[#30D6C4] to-transparent mx-auto"></div>
    </div>
  </section>

  {/* Blog Posts Section */}
  <section class="py-24 px-8 bg-gradient-to-b from-[#0F2235] via-[#0F2235] to-[#0C1C2C] relative">
    <div class="max-w-7xl mx-auto">
      {filteredPosts.length === 0 ? (
        <div class="text-center py-20">
          <div class="w-16 h-16 bg-[#30D6C4]/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <Calendar className="h-8 w-8 text-[#30D6C4]" />
          </div>
          <h3 class="text-2xl font-oswald font-normal text-white mb-4">No articles yet</h3>
          <p class="text-[#B0C4D4] font-inter">Check back soon for our latest insights and updates.</p>
        </div>
      ) : (
        <>
          {/* Featured Post */}
          {filteredPosts.length > 0 && (
            <div class="mb-20">
              <div class="flex items-center mb-12">
                <h2 class="text-3xl md:text-4xl font-oswald font-normal text-white mr-4">Featured</h2>
                <div class="flex-1 h-px bg-gradient-to-r from-[#30D6C4]/50 to-transparent"></div>
              </div>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div class="order-2 lg:order-1">
                  <div class="flex items-center text-[#B0C4D4] text-sm font-inter mb-4">
                    <Calendar className="h-4 w-4 mr-2 text-[#30D6C4]" />
                    <span>{parseDate(filteredPosts[0].data.pubDate).toLocaleDateString(t.dateLocale)}</span>
                    {filteredPosts[0].data.author && (
                      <>
                        <User className="h-4 w-4 ml-4 mr-2 text-[#30D6C4]" />
                        <span>{filteredPosts[0].data.author}</span>
                      </>
                    )}
                  </div>
                  <h3 class="text-3xl md:text-4xl font-oswald font-normal text-white mb-6 leading-tight">
                    <a href={getLocalizedPath(`/blog/${filteredPosts[0].data.title.toLowerCase().replace(/\s+/g, '-')}`)} class="hover:text-[#30D6C4] transition-colors duration-300">
                      {filteredPosts[0].data.title}
                    </a>
                  </h3>
                  <p class="text-lg text-[#B0C4D4] font-inter mb-8 leading-relaxed">
                    {filteredPosts[0].data.description}
                  </p>
                  {filteredPosts[0].data.tags && (
                    <div class="flex flex-wrap gap-3 mb-8">
                      {filteredPosts[0].data.tags.slice(0, 3).map((tag) => (
                        <Badge variant="secondary" className="bg-[#30D6C4]/10 text-[#30D6C4] border-[#30D6C4]/30 hover:bg-[#30D6C4]/20 transition-colors duration-300 px-3 py-1">
                          {tag}
                        </Badge>
                      ))}
                    </div>
                  )}
                  <a
                    href={getLocalizedPath(`/blog/${filteredPosts[0].data.title.toLowerCase().replace(/\s+/g, '-')}`)}
                    class="inline-flex items-center px-6 py-3 bg-[#30D6C4] hover:bg-[#30D6C4]/90 text-white font-medium rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-[#30D6C4]/25 group"
                  >
                    {t.readMore}
                    <ArrowRight className="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform duration-300" />
                  </a>
                </div>
                {filteredPosts[0].data.image && (
                  <div class="order-1 lg:order-2">
                    <div class="relative group">
                      <div class="absolute inset-0 bg-[#30D6C4]/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-500 opacity-0 group-hover:opacity-100"></div>
                      <img
                        src={filteredPosts[0].data.image}
                        alt={filteredPosts[0].data.title}
                        class="relative w-full h-80 lg:h-96 object-cover rounded-2xl shadow-2xl group-hover:shadow-[#30D6C4]/20 transition-all duration-500"
                      />
                    </div>
                  </div>
                )}
              </div>
            </div>
          )}

          {/* All Posts Grid */}
          {filteredPosts.length > 1 && (
            <>
              <div class="flex items-center mb-12">
                <h2 class="text-3xl md:text-4xl font-oswald font-normal text-white mr-4">All Articles</h2>
                <div class="flex-1 h-px bg-gradient-to-r from-[#30D6C4]/50 to-transparent"></div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {filteredPosts.slice(1).map((post) => (
                  <article class="group bg-[#0F2235]/50 backdrop-blur-sm border border-[#30D6C4]/10 hover:border-[#30D6C4]/30 rounded-2xl overflow-hidden hover:shadow-2xl hover:shadow-[#30D6C4]/10 transition-all duration-500 hover:-translate-y-2">
                    {post.data.image && (
                      <div class="relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-t from-[#0F2235]/80 to-transparent z-10"></div>
                        <img
                          src={post.data.image}
                          alt={post.data.title}
                          class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-700"
                        />
                      </div>
                    )}
                    <div class="p-6">
                      <div class="flex items-center text-[#B0C4D4] text-sm font-inter mb-4">
                        <Calendar className="h-4 w-4 mr-2 text-[#30D6C4]" />
                        <span>{parseDate(post.data.pubDate).toLocaleDateString(t.dateLocale)}</span>
                      </div>
                      <h3 class="text-xl font-oswald font-normal text-white mb-3 group-hover:text-[#30D6C4] transition-colors duration-300 leading-tight">
                        <a href={getLocalizedPath(`/blog/${post.data.title.toLowerCase().replace(/\s+/g, '-')}`)} class="hover:text-[#30D6C4] transition-colors">
                          {post.data.title}
                        </a>
                      </h3>
                      <p class="text-[#B0C4D4] font-inter mb-6 line-clamp-3 leading-relaxed">
                        {post.data.description}
                      </p>
                      {post.data.tags && (
                        <div class="flex flex-wrap gap-2 mb-6">
                          {post.data.tags.slice(0, 2).map((tag) => (
                            <Badge variant="secondary" className="bg-[#0C1C2C]/60 text-[#30D6C4] border-[#30D6C4]/20 hover:bg-[#30D6C4]/10 transition-colors duration-300 text-xs">
                              {tag}
                            </Badge>
                          ))}
                        </div>
                      )}
                      <a
                        href={getLocalizedPath(`/blog/${post.data.title.toLowerCase().replace(/\s+/g, '-')}`)}
                        class="inline-flex items-center text-[#30D6C4] hover:text-white font-medium transition-all duration-300 group/link"
                      >
                        {t.readMore}
                        <ArrowRight className="ml-2 h-4 w-4 group-hover/link:translate-x-1 transition-transform duration-300" />
                      </a>
                    </div>
                  </article>
                ))}
              </div>
            </>
          )}
        </>
      )}
    </div>
  </section>
</Layout>
