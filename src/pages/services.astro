---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Code, Smartphone, Globe, Database, Cloud, Shield } from "lucide-react";
---

<Layout>
  {/* Hero Section */}
  <section class="pt-24 pb-16 px-8 bg-gradient-to-br from-[#0C1C2C] via-[#0F2235] to-[#0C1C2C]">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-oswald font-normal text-white leading-tight mb-6">
        Unsere <span class="text-[#30D6C4]">Dienstleistungen</span>
      </h1>
      <p class="text-xl md:text-2xl font-inter text-[#B0C4D4] max-w-3xl mx-auto leading-relaxed">
        Wir bieten umfassende Softwarelösungen, um Ihr Unternehmen zu transformieren und digitale Innovation voranzutreiben.
      </p>
    </div>
  </section>

  {/* Services Grid */}
  <section class="py-20 px-8">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <Card class="bg-[#0F2235] border-[#30D6C4]/20 hover:border-[#30D6C4]/40 transition-all duration-300 hover:scale-105">
          <CardHeader class="text-center">
            <div class="flex justify-center mb-4">
              <Code class="h-12 w-12 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-white font-oswald font-normal text-xl">
              Individuelle Softwareentwicklung
            </CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-[#B0C4D4] font-inter text-center">
              Maßgeschneiderte Softwarelösungen, die auf Ihre spezifischen Geschäftsanforderungen und Arbeitsabläufe zugeschnitten sind.
            </CardDescription>
          </CardContent>
        </Card>
        <Card class="bg-[#0F2235] border-[#30D6C4]/20 hover:border-[#30D6C4]/40 transition-all duration-300 hover:scale-105">
          <CardHeader class="text-center">
            <div class="flex justify-center mb-4">
              <Smartphone class="h-12 w-12 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-white font-oswald font-normal text-xl">
              Mobile App Entwicklung
            </CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-[#B0C4D4] font-inter text-center">
              Native und plattformübergreifende mobile Anwendungen für iOS und Android Plattformen.
            </CardDescription>
          </CardContent>
        </Card>
        <Card class="bg-[#0F2235] border-[#30D6C4]/20 hover:border-[#30D6C4]/40 transition-all duration-300 hover:scale-105">
          <CardHeader class="text-center">
            <div class="flex justify-center mb-4">
              <Globe class="h-12 w-12 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-white font-oswald font-normal text-xl">
              Webentwicklung
            </CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-[#B0C4D4] font-inter text-center">
              Moderne, responsive Websites und Webanwendungen mit modernsten Technologien.
            </CardDescription>
          </CardContent>
        </Card>
        <Card class="bg-[#0F2235] border-[#30D6C4]/20 hover:border-[#30D6C4]/40 transition-all duration-300 hover:scale-105">
          <CardHeader class="text-center">
            <div class="flex justify-center mb-4">
              <Database class="h-12 w-12 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-white font-oswald font-normal text-xl">
              Datenbanklösungen
            </CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-[#B0C4D4] font-inter text-center">
              Datenbankdesign, Optimierung und Verwaltung für effiziente Datenspeicherung und -abrufe.
            </CardDescription>
          </CardContent>
        </Card>
        <Card class="bg-[#0F2235] border-[#30D6C4]/20 hover:border-[#30D6C4]/40 transition-all duration-300 hover:scale-105">
          <CardHeader class="text-center">
            <div class="flex justify-center mb-4">
              <Cloud class="h-12 w-12 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-white font-oswald font-normal text-xl">
              Cloud-Integration
            </CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-[#B0C4D4] font-inter text-center">
              Cloud-Migration, -Bereitstellung und -Verwaltungsdienste für skalierbare Lösungen.
            </CardDescription>
          </CardContent>
        </Card>
        <Card class="bg-[#0F2235] border-[#30D6C4]/20 hover:border-[#30D6C4]/40 transition-all duration-300 hover:scale-105">
          <CardHeader class="text-center">
            <div class="flex justify-center mb-4">
              <Shield class="h-12 w-12 text-[#30D6C4]" />
            </div>
            <CardTitle class="text-white font-oswald font-normal text-xl">
              Sicherheitslösungen
            </CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-[#B0C4D4] font-inter text-center">
              Umfassende Sicherheitsaudits und Implementierung robuster Sicherheitsmaßnahmen.
            </CardDescription>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>
</Layout>
