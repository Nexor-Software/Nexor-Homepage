---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Calendar, User, ArrowRight } from "lucide-react";

const posts = Object.values(import.meta.glob('../blog/*.mdx', { eager: true }));

// Helper function to parse date strings
function parseDate(dateString) {
  return new Date(dateString);
}
---

<Layout>
  <section class="pt-24 pb-16 px-8 bg-gradient-to-br from-[#0C1C2C] via-[#0F2235] to-[#0C1C2C]">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-oswald font-normal text-white leading-tight mb-6">
        Unser <span class="text-[#30D6C4]">Blog</span>
      </h1>
      <p class="text-xl md:text-2xl font-inter text-[#B0C4D4] max-w-3xl mx-auto leading-relaxed">
        Einblicke in unsere Arbeit, Technologie-Trends und hilfreiche Tipps aus der Welt der Softwareentwicklung.
      </p>
    </div>
  </section>

  <section class="py-20 px-8 bg-gradient-to-br from-[#0C1C2C] via-[#0F2235] to-[#0C1C2C]">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <Card class="group bg-[#0F2235]/80 backdrop-blur-sm border-[#30D6C4]/20 hover:border-[#30D6C4]/50 hover:bg-[#0F2235] transition-all duration-500 hover:scale-[1.02] hover:shadow-2xl hover:shadow-[#30D6C4]/10 overflow-hidden">
            {post.frontmatter.image && (
              <div class="w-full h-48 bg-gradient-to-br from-[#30D6C4]/5 to-transparent flex items-center justify-center p-4 overflow-hidden">
                <img
                  src={post.frontmatter.image}
                  alt={post.frontmatter.title}
                  class="w-full h-full object-cover rounded-t-lg group-hover:scale-105 transition-transform duration-500"
                />
              </div>
            )}
            <CardHeader class="pb-4">
              <div class="flex items-center text-[#B0C4D4] text-sm font-inter mb-4">
                <Calendar class="h-4 w-4 mr-2 text-[#30D6C4]" />
                <span>{parseDate(post.frontmatter.pubDate).toLocaleDateString('de-DE')}</span>
                {post.frontmatter.author && (
                  <>
                    <User class="h-4 w-4 ml-4 mr-2 text-[#30D6C4]" />
                    <span>{post.frontmatter.author}</span>
                  </>
                )}
              </div>
              <CardTitle class="text-white font-oswald font-normal text-xl mb-3 group-hover:text-[#30D6C4] transition-colors duration-300">
                <a href={`/blog/${post.frontmatter.title.toLowerCase().replace(/\s+/g, '-')}`} class="hover:text-[#30D6C4] transition-colors">
                  {post.frontmatter.title}
                </a>
              </CardTitle>
            </CardHeader>
            <CardContent class="pt-0">
              <p class="text-[#B0C4D4] font-inter mb-6 line-clamp-3 leading-relaxed">
                {post.frontmatter.description}
              </p>
              {post.frontmatter.tags && (
                <div class="flex flex-wrap gap-2 mb-6">
                  {post.frontmatter.tags.map((tag) => (
                    <Badge variant="secondary" class="bg-[#0C1C2C]/80 text-[#30D6C4] border-[#30D6C4]/30 hover:bg-[#30D6C4]/10 transition-colors duration-300">
                      {tag}
                    </Badge>
                  ))}
                </div>
              )}
              <a
                href={`/blog/${post.frontmatter.title.toLowerCase().replace(/\s+/g, '-')}`}
                class="inline-flex items-center text-[#30D6C4] hover:text-white font-medium transition-all duration-300 group/link"
              >
                Weiterlesen
                <ArrowRight class="ml-2 h-4 w-4 group-hover/link:translate-x-1 transition-transform duration-300" />
              </a>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>
</Layout>
