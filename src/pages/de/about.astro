---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Target, Award, Clock } from "lucide-react";
import HeroTitle from "@/components/HeroTitle";

const currentLocale = 'de';

const translations = {
  de: {
    title: "Über",
    subtitle: "Wir helfen Unternehmen innovative Softwarelösungen zu entwickeln, um im digitalen Zeitalter zu wachsen.",
    storyTitle: "Unsere",
    storyTitleHighlight: "Geschichte",
    storyPara1: "Gegründet Anfang 2025 mit der Vision, Deutschland zum Zentrum der Digitalisierung zu machen, entwickelt Nexor Software Technologielösungen für kleine bis mittelständige Unternehmen. Wir glauben fest daran, dass jedes deutsche Unternehmen Zugang zu den neuesten Technologien haben sollte, um im globalen Wettbewerb zu bestehen und nachhaltiges Wachstum zu erzielen.",
    storyPara2: "Unser Team arbeitet mit daran, Design- und Softwarelösungen zu liefern, die die Kundenbedürfnisse übertreffen.",
    missionTitle: "Unsere Mission",
    missionText: "Unternehmen mit innovativen Softwarelösungen zu stärken, die digitale Transformation vorantreiben und bleibenden Wert für unsere Kunden und deren Kunden schaffen.",
    visionTitle: "Unsere Vision",
    visionText: "Der führende Softwareentwicklungspartner für Unternehmen zu sein, die Technologie für Wettbewerbsvorteile und nachhaltiges Wachstum nutzen möchten.",
    achievementsTitle: "Unsere",
    achievementsTitleHighlight: "Erfolge",
    projectsLabel: "Erfolgreich gestartete Projekte",
    experienceLabel: "Jahre Erfahrung",
    supportLabel: "Ausgezeichneter Support"
  }
};

const t = translations[currentLocale];
---

<Layout>
  {/* Hero Section */}
  <section class="relative pt-32 pb-20 px-8 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#0C1C2C] via-[#0F2235] to-[#0C1C2C]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(48,214,196,0.1),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(48,214,196,0.05),transparent_50%)]"></div>
    {/* Smooth transition gradient overlay - much more gradual */}
    <div class="absolute bottom-0 left-0 right-0 h-96 bg-gradient-to-b from-transparent to-[#0F2235] pointer-events-none"></div>
    <div class="relative max-w-6xl mx-auto flex flex-col items-center">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-[#30D6C4]/10 border border-[#30D6C4]/20 text-[#30D6C4] text-sm font-medium mb-8">
        <span class="w-2 h-2 bg-[#30D6C4] rounded-full mr-2 animate-pulse"></span>
        Über uns
      </div>
      <HeroTitle client:load text={["Über Nexor Software"]} textColors={["#30D6C4", "#30D6C4"]} />
      <p class="text-xl md:text-2xl font-inter text-[#B0C4D4] max-w-4xl mx-auto leading-relaxed mb-12">
        {t.subtitle}
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-[#30D6C4] to-transparent mx-auto"></div>
    </div>
  </section>

  {/* Our Story */}
  <section class="py-24 px-8 bg-gradient-to-b from-[#0F2235] via-[#0F2235] to-[#0C1C2C] relative">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-oswald font-normal text-white mb-6">
            {t.storyTitle} <span class="text-[#30D6C4]">{t.storyTitleHighlight}</span>
          </h2>
          <p class="text-lg text-[#B0C4D4] mb-6 font-inter leading-relaxed">
            {t.storyPara1}
          </p>
          <p class="text-lg text-[#B0C4D4] font-inter leading-relaxed">
            {t.storyPara2}
          </p>
        </div>
        <div class="relative group">
          <div class="absolute inset-0 bg-[#30D6C4]/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-500 opacity-0 group-hover:opacity-100"></div>
          <div class="relative bg-[#0F2235]/50 backdrop-blur-sm border border-[#30D6C4]/10 hover:border-[#30D6C4]/30 rounded-2xl p-8 shadow-2xl hover:shadow-[#30D6C4]/10 transition-all duration-500 hover:-translate-y-2">
            <h3 class="text-2xl font-oswald font-normal text-white mb-6">{t.missionTitle}</h3>
            <p class="text-[#B0C4D4] font-inter leading-relaxed mb-4">
              {t.missionText}
            </p>
            <h3 class="text-2xl font-oswald font-normal text-white mb-6 mt-8">{t.visionTitle}</h3>
            <p class="text-[#B0C4D4] font-inter leading-relaxed">
              {t.visionText}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

