---
import Layout from "@/layouts/Layout.astro";
import { Hero } from "@/components/Hero";
import ThreeColumnSection from "@/components/ThreeColumnSection.astro";
import CustomerReview from "@/components/CustomerReview.astro";
import { LoadingScreen } from "@/components/LoadingScreen";
import { getPublicAssetUrl } from "@/utils/assets";

const pageTitle = "Nexor Software – Digitale Lösungen für Unternehmen";
const pageDescription =
  "Wir entwickeln und vernetzen Ihre Systeme intelligent, damit Sie maximalen Komfort und Nutzen aus Ihrer digitalen Infrastruktur erzielen.";
const pageKeywords = "Nexor Software, digitale Lösungen, Softwareentwicklung, Webentwicklung, Integration";
---

<Layout
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  pageKeywords={pageKeywords}
  pageOgImage="/og-default.svg">
  <LoadingScreen client:idle currentLocale="de" />
  <Hero client:load currentLocale="de" />
  <ThreeColumnSection currentLocale="de" />
  <CustomerReview currentLocale="de" authorImage={getPublicAssetUrl('Armen-Chulyakov.png')} />
</Layout>
