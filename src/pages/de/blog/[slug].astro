---
import Layout from "@/layouts/Layout.astro";
import { Badge } from "@/components/ui/badge";
import { Calendar, User, ArrowLeft } from "lucide-react";

// Enable prerendering for static generation
export const prerender = true;

interface Post {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    author?: string;
    tags?: string[];
    image?: string;
  };
  default: any;
}

export async function getStaticPaths() {
  const posts = Object.values(import.meta.glob('../../../content/blog/de/*.mdx', { eager: true })) as Post[];
  return posts.map(post => ({
    params: { slug: post.frontmatter.title.toLowerCase().replace(/\s+/g, '-') },
    props: { post }
  }));
}

const { post } = Astro.props as { post: Post };
const Content = post.default;
const currentLocale = Astro.currentLocale || 'de';

// Helper function to parse date strings
function parseDate(dateString) {
  return new Date(dateString);
}

// Helper function to get localized path
function getLocalizedPath(path) {
  const pathWithoutLocale = path.replace(/^\/(en|de)/, '');
  return currentLocale === 'en' ? pathWithoutLocale : `/${currentLocale}${pathWithoutLocale}`;
}

const translations = {

  de: {
    backToBlog: "Zurück zur Blog-Übersicht",
    dateLocale: 'de-DE'
  }
};

const t = translations[currentLocale];
---

<Layout>
  <article class="min-h-screen bg-[#0C1C2C]">
    {/* Reading Progress Bar */}
    <div class="fixed top-0 left-0 w-full h-1 bg-[#0F2235] z-50">
      <div class="h-full bg-gradient-to-r from-[#30D6C4] to-[#28C4B2] transition-all duration-300 ease-out" id="reading-progress"></div>
    </div>

    {/* Hero Section */}
    <section class="relative pt-32 pb-16 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-[#0C1C2C] via-[#0F2235] to-[#0C1C2C]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(48,214,196,0.1),transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(48,214,196,0.05),transparent_50%)]"></div>

      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Back Navigation */}
        <div class="mb-8">
          <a href={getLocalizedPath('/blog')} class="inline-flex items-center px-4 py-2 rounded-full bg-[#30D6C4]/10 border border-[#30D6C4]/20 text-[#30D6C4] hover:bg-[#30D6C4]/20 transition-all duration-300 group">
            <ArrowLeft className="mr-2 h-4 w-4 group-hover:-translate-x-1 transition-transform duration-300" />
            {t.backToBlog}
          </a>
        </div>

        {/* Article Header */}
        <header class="text-center">
          {post.frontmatter.image && (
            <div class="relative mb-12 group">
              <div class="absolute inset-0 bg-[#30D6C4]/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-500 opacity-0 group-hover:opacity-100"></div>
              <img
                src={post.frontmatter.image}
                alt={post.frontmatter.title}
                class="relative w-full h-64 md:h-96 object-cover rounded-2xl shadow-2xl group-hover:shadow-[#30D6C4]/20 transition-all duration-500"
              />
            </div>
          )}

          <div class="inline-flex items-center px-3 py-1 rounded-full bg-[#30D6C4]/10 border border-[#30D6C4]/20 text-[#30D6C4] text-sm font-medium mb-6">
            <span class="w-2 h-2 bg-[#30D6C4] rounded-full mr-2 animate-pulse"></span>
            Artikel
          </div>

          <h1 class="text-4xl md:text-6xl font-oswald font-normal text-white leading-tight mb-8">
            {post.frontmatter.title}
          </h1>

          <p class="text-xl md:text-2xl text-[#B0C4D4] font-inter leading-relaxed mb-12 max-w-3xl mx-auto">
            {post.frontmatter.description}
          </p>

          {/* Article Metadata */}
          <div class="flex flex-wrap justify-center items-center gap-6 text-[#B0C4D4] font-inter mb-8">
            <div class="flex items-center bg-[#0F2235]/50 px-4 py-2 rounded-full border border-[#30D6C4]/10">
              <Calendar className="h-4 w-4 mr-2 text-[#30D6C4]" />
              <span>{parseDate(post.frontmatter.pubDate).toLocaleDateString(t.dateLocale, {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}</span>
            </div>
            {post.frontmatter.author && (
              <div class="flex items-center bg-[#0F2235]/50 px-4 py-2 rounded-full border border-[#30D6C4]/10">
                <User className="h-4 w-4 mr-2 text-[#30D6C4]" />
                <span>{post.frontmatter.author}</span>
              </div>
            )}
          </div>

          {/* Tags */}
          {post.frontmatter.tags && (
            <div class="flex flex-wrap justify-center gap-3">
              {post.frontmatter.tags.map((tag) => (
                <Badge variant="secondary" className="bg-[#30D6C4]/10 text-[#30D6C4] border-[#30D6C4]/30 hover:bg-[#30D6C4]/20 transition-colors duration-300 px-4 py-2">
                  {tag}
                </Badge>
              ))}
            </div>
          )}
        </header>
      </div>
    </section>

    {/* Article Content */}
    <section class="py-16 bg-[#0C1C2C]">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative">
          {/* Content Container with enhanced styling */}
          <div class="bg-[#0F2235]/30 backdrop-blur-sm border border-[#30D6C4]/10 rounded-2xl p-10 md:p-20 shadow-2xl">
              <div class="prose prose-2xl prose-invert max-w-none leading-relaxed md:leading-loose">
              <Content />
            </div>
          </div>

          {/* Decorative Elements */}
          <div class="absolute -top-4 -left-4 w-8 h-8 bg-[#30D6C4]/20 rounded-full blur-xl"></div>
          <div class="absolute -bottom-4 -right-4 w-12 h-12 bg-[#30D6C4]/10 rounded-full blur-2xl"></div>
        </div>
      </div>
    </section>

    {/* Article Footer */}
    <section class="py-16 bg-[#0F2235]">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="w-24 h-1 bg-gradient-to-r from-[#30D6C4] to-transparent mx-auto mb-8"></div>
        <p class="text-[#B0C4D4] font-inter mb-8">
          Vielen Dank fürs Lesen! Haben Sie Fragen oder Feedback?
        </p>
        <a href={getLocalizedPath('/contact')} class="inline-flex items-center px-6 py-3 bg-[#30D6C4] hover:bg-[#30D6C4]/90 text-white font-medium rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-[#30D6C4]/25 group">
          Kontakt aufnehmen
          <ArrowLeft className="ml-2 h-4 w-4 rotate-180 group-hover:translate-x-1 transition-transform duration-300" />
        </a>
      </div>
    </section>
  </article>

  <script>
    // Reading progress bar functionality
    document.addEventListener('DOMContentLoaded', function() {
      const progressBar = document.getElementById('reading-progress');
      const article = document.querySelector('article');

      function updateProgress() {
        const scrollTop = window.pageYOffset;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        const scrollPercent = (scrollTop / docHeight) * 100;
        progressBar.style.width = scrollPercent + '%';
      }

      window.addEventListener('scroll', updateProgress);
      updateProgress();
    });
  </script>
</Layout>
