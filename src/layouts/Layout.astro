---
import { Header } from "@/components/Header";
import { Footer } from "@/components/Footer";
import { ProvidersIsland } from "@/components/ProvidersIsland";
import "@/index.css";

// providers are now inside ProvidersIsland

// Get current locale and define translations
const currentLocale = Astro.currentLocale || 'en';
const isGerman = currentLocale === 'de';

const translations = {
  en: {
    title: "Nexor Software - Building Tomorrow's Digital Solutions",
    description: "Transform your business with innovative software solutions from Nexor Software. Expert development, cutting-edge technology, exceptional results.",
    author: "Nexor Software",
    keywords: "software development, web development, mobile apps, digital solutions, technology consulting, Nexor Software"
  },
  de: {
    title: "Nexor Software - Die Zukunft der digitalen Lösungen",
    description: "Transformieren Sie Ihr Unternehmen mit innovativen Softwarelösungen von Nexor Software. Expertenentwicklung, modernste Technologie, außergewöhnliche Ergebnisse.",
    author: "Nexor Software",
    keywords: "Softwareentwicklung, Webentwicklung, mobile Apps, digitale Lösungen, Technologieberatung, Nexor Software"
  }
};

const t = translations[currentLocale];

// Get current URL for canonical and Open Graph
const canonicalUrl = new URL(Astro.request.url);
canonicalUrl.pathname = canonicalUrl.pathname.replace(/^\/(de|en)/, `/${currentLocale}`);
const canonicalHref = canonicalUrl.href;

// Alternate language URLs
const alternateEn = canonicalUrl.href.replace(`/${currentLocale}`, '/en');
const alternateDe = canonicalUrl.href.replace(`/${currentLocale}`, '/de');
---

<html lang={currentLocale} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{t.title}</title>
    <meta name="title" content={t.title} />
    <meta name="description" content={t.description} />
    <meta name="keywords" content={t.keywords} />
    <meta name="author" content={t.author} />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalHref} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Preconnect to external origins for faster loading -->
    <link rel="preconnect" href="https://oybnx5jyol.ufs.sh" crossorigin>
    <link rel="preconnect" href="https://eu.i.posthog.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- DNS prefetch for additional performance -->
    <link rel="dns-prefetch" href="https://oybnx5jyol.ufs.sh">
    <link rel="dns-prefetch" href="https://eu.i.posthog.com">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">

    <!-- Preload critical LCP image -->
    <link rel="preload" href="https://oybnx5jyol.ufs.sh/f/AeQfLJScGDwyzjH393fOsLQhVHiI0NT7km4ubKyvFM9Bfeol" as="image" fetchpriority="high" />

    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&display=swap" as="style">
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" as="style">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap">

    <!-- Language Alternates -->
    <link rel="alternate" hreflang="de" href={alternateDe} />
    <link rel="alternate" hreflang="en" href={alternateEn} />
    <link rel="alternate" hreflang="x-default" href={alternateDe} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalHref} />
    <meta property="og:title" content={t.title} />
    <meta property="og:description" content={t.description} />
    <meta property="og:image" content="https://oybnx5jyol.ufs.sh/f/AeQfLJScGDwy7MCKQ9mF8fnHEAdhYXjRW1Vrzbo6iOZBevJ4" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Nexor Software - Innovative Digital Solutions" />
    <meta property="og:site_name" content="Nexor Software" />
    <meta property="og:locale" content={currentLocale === 'de' ? 'de_DE' : 'en_US'} />
    <meta property="og:locale:alternate" content={currentLocale === 'de' ? 'en_US' : 'de_DE'} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalHref} />
    <meta name="twitter:title" content={t.title} />
    <meta name="twitter:description" content={t.description} />
    <meta name="twitter:image" content="https://oybnx5jyol.ufs.sh/f/AeQfLJScGDwy7MCKQ9mF8fnHEAdhYXjRW1Vrzbo6iOZBevJ4" />
    <meta name="twitter:image:alt" content="Nexor Software - Innovative Digital Solutions" />
    <meta name="twitter:site" content="@nexorsoftware" />
    <meta name="twitter:creator" content="@nexorsoftware" />

    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#0C1C2C" />
    <meta name="msapplication-TileColor" content="#0C1C2C" />
    <meta name="application-name" content="Nexor Software" />

    <!-- Favicon and Icons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Preconnect to Google Fonts for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Preconnect to image host -->
    <link rel="preconnect" href="https://oybnx5jyol.ufs.sh" crossorigin>
    <!-- Custom font combination -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&family=Inter:wght@500&display=swap" rel="stylesheet" media="print" onload="this.media='all'">

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={
      JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Nexor Software",
        "url": "https://nexor-software.de",
        "logo": "https://oybnx5jyol.ufs.sh/f/AeQfLJScGDwy7MCKQ9mF8fnHEAdhYXjRW1Vrzbo6iOZBevJ4",
        "description": t.description,
        "foundingDate": "2024",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "DE"
        },
        "sameAs": [
          "https://github.com/Nexor-Software",
          //"https://twitter.com/nexorsoftware"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "Customer Service",
          "availableLanguage": ["German", "English"]
        },
        "knowsAbout": [
          "Software Development",
          "Web Development",
          "Mobile Applications",
          "Digital Solutions",
          "Technology Consulting"
        ]
      })
    } />

  </head>
  <body class="min-h-screen bg-[#0C1C2C] overflow-x-hidden">
    <Header client:idle {currentLocale} />
    <slot />
    <Footer client:idle {currentLocale} />
    <ProvidersIsland client:idle {currentLocale} />
  </body>
</html>