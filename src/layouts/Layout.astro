---
import { Header } from "@/components/Header";
import { Footer } from "@/components/Footer";
import { ProvidersIsland } from "@/components/ProvidersIsland";
import "@/index.css";

// Get current locale and define translations
const currentLocale = Astro.currentLocale || 'en';

const translations = {
  en: {
    title: "Nexor Software - Building Tomorrow's Digital Solutions",
    description: "Transform your business with innovative software solutions from Nexor Software. Expert development, cutting-edge technology, exceptional results.",
    author: "Nexor Software",
    keywords: "software development, web development, mobile apps, digital solutions, technology consulting, Nexor Software"
  },
  de: {
    title: "Nexor Software - Die Zukunft der digitalen Lösungen",
    description: "Transformieren Sie Ihr Unternehmen mit innovativen Softwarelösungen von Nexor Software. Expertenentwicklung, modernste Technologie, außergewöhnliche Ergebnisse.",
    author: "Nexor Software",
    keywords: "Softwareentwicklung, Webentwicklung, mobile Apps, digitale Lösungen, Technologieberatung, Nexor Software"
  }
};

const {
  pageTitle,
  pageDescription,
  pageKeywords,
  pageOgImage,
  pageCanonicalPath,
  noindex = false,
} = Astro.props;

const t = translations[currentLocale];
const baseUrl = Astro.site?.origin || new URL(Astro.request.url).origin;
const requestPath = new URL(Astro.request.url).pathname;
const pathWithoutLocale = requestPath.replace(/^\/(de|en)/, '') || '/';

const title = pageTitle ?? t.title;
const description = pageDescription ?? t.description;
const keywords = pageKeywords ?? t.keywords;
const ogImagePath = pageOgImage ?? '/og-default.svg';
const ogImageUrl = ogImagePath.startsWith('http') ? ogImagePath : new URL(ogImagePath, baseUrl).href;

const canonicalPath =
  pageCanonicalPath ??
  `/${currentLocale}${pathWithoutLocale === '/' ? '' : pathWithoutLocale}`;
const canonicalHref = new URL(canonicalPath, baseUrl).href;

const alternateDe = new URL(`/de${pathWithoutLocale === '/' ? '' : pathWithoutLocale}`, baseUrl).href;
const alternateEn = new URL(`/en${pathWithoutLocale === '/' ? '' : pathWithoutLocale}`, baseUrl).href;
const alternateXDefault = alternateDe;

const robotsContent = noindex
  ? 'noindex, nofollow'
  : 'index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1';
---

<html lang={currentLocale} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={t.author} />
    <meta name="robots" content={robotsContent} />
    <meta name="googlebot" content={robotsContent} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalHref} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Preconnect to external origins for faster loading -->
    <link rel="preconnect" href="https://nexorstorage-public-yjtox.sevalla.storage" crossorigin>
    <link rel="preconnect" href="https://eu.i.posthog.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- DNS prefetch for additional performance -->
    <link rel="dns-prefetch" href="https://nexorstorage-public-yjtox.sevalla.storage">
    <link rel="dns-prefetch" href="https://eu.i.posthog.com">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">

    <!-- Preload critical LCP image -->
    <link rel="preload" href="https://nexorstorage-public-yjtox.sevalla.storage/Nexor-logo-large-helle-Schrift.avif" as="image" fetchpriority="high" />

    <!-- Non-blocking font loading -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"></noscript>

    <!-- Language Alternates -->
    <link rel="alternate" hreflang="de" href={alternateDe} />
    <link rel="alternate" hreflang="en" href={alternateEn} />
    <link rel="alternate" hreflang="x-default" href={alternateXDefault} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalHref} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Nexor Software - Innovative Digital Solutions" />
    <meta property="og:site_name" content="Nexor Software" />
    <meta property="og:locale" content={currentLocale === 'de' ? 'de_DE' : 'en_US'} />
    <meta property="og:locale:alternate" content={currentLocale === 'de' ? 'en_US' : 'de_DE'} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalHref} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content="Nexor Software - Innovative Digital Solutions" />
    <meta name="twitter:site" content="@nexorsoftware" />
    <meta name="twitter:creator" content="@nexorsoftware" />

    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#0C1C2C" />
    <meta name="msapplication-TileColor" content="#0C1C2C" />
    <meta name="application-name" content="Nexor Software" />

    <!-- Favicon and Icons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Preconnect to image host -->
    <link rel="preconnect" href="https://nexorstorage-public-yjtox.sevalla.storage" crossorigin>

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={
      JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Organization",
            "name": "Nexor Software",
            "url": "https://nexor-software.de",
            "logo": "https://oybnx5jyol.ufs.sh/f/AeQfLJScGDwy7MCKQ9mF8fnHEAdhYXjRW1Vrzbo6iOZBevJ4",
            "description": t.description,
            "foundingDate": "2025",
            "address": {
              "@type": "Heidenheim an der Brenz",
              "addressCountry": "DE"
            },
            "sameAs": [
              "https://github.com/Nexor-Software",
              //"https://twitter.com/nexorsoftware"
            ],
            "contactPoint": {
              "@type": "ContactPoint",
              "contactType": "Customer Service",
              "availableLanguage": ["German", "English"]
            },
            "knowsAbout": [
              "Software Development",
              "Web Development",
              "Mobile Applications",
              "Digital Solutions",
              "Technology Consulting"
            ]
          },
          {
            "@type": "WebSite",
            "name": "Nexor Software",
            "alternateName": "Nexor Software",
            "url": "https://nexor-software.de"
          }
        ]
      })
    } />

  </head>
  <body class="min-h-screen bg-[#0C1C2C] overflow-x-hidden">
    <Header client:idle {currentLocale} />
    <slot />
    <Footer client:idle {currentLocale} />
    <ProvidersIsland client:idle {currentLocale} />
  </body>
</html>
